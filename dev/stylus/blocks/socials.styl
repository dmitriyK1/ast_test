.socials
	display block
	float right
	margin-top: -1px
	width: 30.5%
	border-top: 1px solid #e4e4e4
	margin-right: 6px
	text-align left
	padding-top 25px
	@media only screen and (min-width 768px) and (max-width 1024px)
		padding-top 19px
		width 30%
		margin-right 20px
	@media only screen and (max-width 767px)
		float none
		width 90%
		margin-left auto
		margin-right auto
		text-align center
		order 2
		padding-top 15px

	&__lbl
		text-transform uppercase
		font-size rem(14px)
		color #4C4C4C
		font-weight 700
		margin-right 18px
		@media only screen and (min-width 768px) and (max-width 1024px), only screen and (max-width 767px)
			display none

	&__item
		position relative
		display inline-block
		margin-right 10px
		vertical-align middle
		@media only screen and (max-width 767px)
			margin-right 15px
		&_fb
			&:before
				pseudo()
				sprite('fb')
				position relative
			&:hover
				&:before
					sprite('fb_hover')
		&_tw
			&:before
				pseudo()
				sprite('tw')
				position relative
			&:hover
				&:before
					sprite('tw_hover')
		&_gp
			&:before
				pseudo()
				sprite('gp')
				position relative
			&:hover
				&:before
					sprite('gp_hover')
		&_pin
			&:before
				pseudo()
				sprite('pin')
				position relative
			&:hover
				&:before
					sprite('pin_hover')
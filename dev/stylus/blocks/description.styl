.description
	float left
	width 63%
	text-align left
	color #1A1A1A
	padding-top 25px
	cf()
	@media only screen and (min-width 768px) and (max-width 1024px)
		padding-top 0
		margin-top -12%
	@media only screen and (max-width 767px)
		float none
		width 90%
		margin-left auto
		margin-right auto
		order 1
		border-top 1px solid #e4e4e4

	&__h2
		font-size rem(21px)
		letter-spacing 2px
		@media only screen and (max-width 767px)
			font-size rem(16px)
	&__h3
		font-size rem(18px)
		font-weight 400
		letter-spacing 1.6px
		@media only screen and (max-width 767px)
			font-size rem(16px)
	&__p
		font-size rem(15px)
		margin-top 29px
		letter-spacing 1.4px
		line-height 1.3
		padding-right 18%
		@media only screen and (min-width 768px) and (max-width 1024px)
			margin-top 22px
		@media only screen and (max-width 767px)
			padding-right 0
			font-size rem(13px)
	&__list
		margin-top 24px
		@media only screen and (max-width 767px)
			font-size rem(13px)
			padding-bottom 20px
		&-item
			padding-bottom 1px
			letter-spacing .9px
			&:before
				padding-right 5px
				content 'â€¢'

.readmore
	&-inner
		display block
	&-btn
		display none
		text-transform uppercase
		font-size rem(13px)
		font-weight 700
		color #191919
		border-top 2px solid #191919
		&:after
			content ''
			sprite('readmore')
			display inline-block
			margin-left 17px
	@media only screen and (min-width 768px) and (max-width 1024px)
		margin-top 30px
		&-btn
			display inline-block
			padding-top 10px
		&-inner
			display none
.gallery
	cf()
	clear both
	padding-top 55px
	@media only screen and (min-width 768px) and (max-width 1024px)
		padding-right 20px
	&__img
		width 100%
	&__item
		position relative
		col(1/3)
		&-inner
			position absolute
			background none
			width 100%
			height 98.2%
			padding-top 60px
			transition background .3s
			@media only screen and (min-width 768px) and (max-width 1024px)
				padding-top 10%
		&-btn
		&-descr
			text-transform uppercase
			opacity 0
			transition opacity .3s
		&-btn
			border none
			font-size rem(12px)
			font-weight 600
			color #272727
			background #fff
			letter-spacing -.5px
			margin-top 28px
			padding 10px 18px
		&-descr
			font-size rem(24px)
			font-weight 700
			color #fff
			line-height 1.3

		&:hover
			.gallery__item-descr
				opacity 1
			.gallery__item-btn
				opacity .8
				&:hover
					opacity 1
			.gallery__item-inner
				background rgba(0, 0, 0, .45)

.header
	background-color #fff
	text-align left

	&__inner
		font-size rem(40px)
		text-transform uppercase
		inner(990px, $mainMinWidth, 0)
		padding-top 36px
		padding-bottom 20px
		color #323232
		@media only screen and (min-width 768px) and (max-width 1024px)
			padding-top 28px
		@media only screen and (max-width 767px)
			font-size rem(24px)
			padding-left 10%
			padding-top 15px
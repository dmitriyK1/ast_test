	section.socials
		label.socials__lbl share:
		a.socials__item.socials__item_fb(href=jv0)
		a.socials__item.socials__item_tw(href=jv0)
		a.socials__item.socials__item_gp(href=jv0)
		a.socials__item.socials__item_pin(href=jv0)

mixin description
	section.description
		h2.description__h2 Nautical print T-shirt
		h3.description__h3 TH3863-00
		p.description__p An anchor and marine flags accent the chest of this nautical-inspired Lacoste T-shirt. A comfortable piece perfect for urban adventures.
		.readmore.js-readmore
			a.readmore-btn(href=jv0) read more
			.readmore-inner
				ul.description__list
					li.description__list-item Regular fit
					li.description__list-item Crew neck
					li.description__list-item Lacoste Yachting branding on chest
					li.description__list-item Other
					li.description__list-item Round neck
					li.description__list-item COTTON (100%)

